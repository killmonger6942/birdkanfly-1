---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const features = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/></svg>`,
    title: 'DGCA Approved',
    description: 'Fully certified and approved by the Directorate General of Civil Aviation for all pilot training programs.',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/></svg>`,
    title: 'Ideal Weather',
    description: 'Mysore offers 300+ flyable days per year with excellent visibility and minimal weather disruptions.',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>`,
    title: 'Expert Instructors',
    description: 'Learn from seasoned pilots with thousands of flight hours and airline experience.',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>`,
    title: 'Modern Fleet',
    description: 'Train on well-maintained, modern aircraft equipped with the latest avionics technology.',
  },
];

const stats = [
  { value: '300+', label: 'Flyable Days/Year' },
  { value: '15+', label: 'Aircraft Fleet' },
  { value: '50+', label: 'Years Combined Experience' },
  { value: '100%', label: 'Safety Record' },
];

const programs = [
  {
    title: 'Private Pilot License',
    abbr: 'PPL',
    duration: '4-6 months',
    description: 'Your first step into aviation. Learn to fly for personal use and recreation.',
    color: 'from-primary-500 to-primary-600',
  },
  {
    title: 'Commercial Pilot License',
    abbr: 'CPL',
    duration: '12-18 months',
    description: 'Turn your passion into a career. Get certified to fly commercially.',
    color: 'from-secondary-500 to-secondary-600',
  },
  {
    title: 'Flight Instructor Rating',
    abbr: 'FIR',
    duration: '2-3 months',
    description: 'Share your knowledge. Become a certified flight instructor.',
    color: 'from-primary-600 to-secondary-500',
  },
];
---

<Layout title="Birdkanfly Aviation | Premier Flight Training in Mysore">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-800 to-secondary-900">
        <div class="absolute inset-0 opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
      </div>
      
      <!-- Floating elements with parallax -->
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-primary-500/20 rounded-full blur-3xl animate-float parallax-slow"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary-500/20 rounded-full blur-3xl animate-float parallax-fast" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 right-1/3 w-48 h-48 bg-white/5 rounded-full blur-2xl animate-float" style="animation-delay: 0.5s;"></div>
      
      <!-- Content -->
      <div class="relative z-10 container-custom text-center text-white pt-20">
        <div class="animate-fade-in">
          <span class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-medium mb-6">
            ðŸŽ“ Now Enrolling for 2025 Batch
          </span>
        </div>
        
        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 animate-slide-up">
          Your Journey to the
          <span class="block gradient-text">Skies Begins Here</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-slate-300 max-w-2xl mx-auto mb-10 animate-slide-up" style="animation-delay: 0.2s;">
          Premier flight training academy in Mysore. Transform your dream of flying into reality with world-class instruction and modern aircraft.
        </p>
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-slide-up" style="animation-delay: 0.4s;">
          <a href="/programs" class="btn-primary text-lg px-8 py-4">
            Explore Programs
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/contact" class="btn-outline border-white text-white hover:bg-white hover:text-slate-900 text-lg px-8 py-4">
            Contact Us
          </a>
        </div>
        
        <!-- Scroll indicator -->
        <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
          <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="section bg-white">
      <div class="container-custom">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-4">
            Why Choose <span class="gradient-text">Birdkanfly</span>?
          </h2>
          <p class="text-slate-600 max-w-2xl mx-auto">
            We provide the perfect environment for aspiring pilots to learn, grow, and excel.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {features.map((feature, index) => (
            <div class="card p-6 text-center animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-2xl flex items-center justify-center text-primary-500">
                <Fragment set:html={feature.icon} />
              </div>
              <h3 class="font-display font-semibold text-lg mb-2">{feature.title}</h3>
              <p class="text-slate-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-16 bg-gradient-to-r from-primary-500 to-secondary-600">
      <div class="container-custom">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
          {stats.map((stat) => (
            <div class="text-center text-white animate-on-scroll">
              <div class="font-display text-4xl md:text-5xl font-bold mb-2">{stat.value}</div>
              <div class="text-white/80">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Programs Preview -->
    <section class="section bg-slate-50">
      <div class="container-custom">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="font-display text-3xl md:text-4xl font-bold mb-4">
            Our <span class="gradient-text">Programs</span>
          </h2>
          <p class="text-slate-600 max-w-2xl mx-auto">
            Comprehensive training programs designed to take you from ground to sky.
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {programs.map((program, index) => (
            <div class="card overflow-hidden animate-on-scroll group" style={`animation-delay: ${index * 0.15}s`}>
              <div class={`h-2 bg-gradient-to-r ${program.color}`}></div>
              <div class="p-8">
                <div class="flex items-center justify-between mb-4">
                  <span class={`text-sm font-semibold px-3 py-1 rounded-full bg-gradient-to-r ${program.color} text-white`}>
                    {program.abbr}
                  </span>
                  <span class="text-slate-500 text-sm">{program.duration}</span>
                </div>
                <h3 class="font-display text-xl font-bold mb-3 group-hover:text-primary-500 transition-colors">
                  {program.title}
                </h3>
                <p class="text-slate-600 mb-6">{program.description}</p>
                <a href={`/programs#${program.abbr.toLowerCase()}`} class="inline-flex items-center text-primary-500 font-medium hover:text-primary-600 transition-colors">
                  Learn More
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12 animate-on-scroll">
          <a href="/programs" class="btn-primary">
            View All Programs
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-dark text-white relative overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute top-0 right-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-secondary-500/10 rounded-full blur-3xl"></div>
      </div>
      
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center animate-on-scroll">
          <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
            Ready to Take Off?
          </h2>
          <p class="text-slate-400 text-lg mb-8">
            Join our next batch and begin your journey to becoming a professional pilot. 
            Limited seats available â€” apply now to secure your spot.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="/contact" class="btn-primary text-lg px-8 py-4">
              Apply Now
            </a>
            <a href="/admissions" class="btn-outline border-white/30 text-white hover:bg-white hover:text-slate-900 text-lg px-8 py-4">
              View Admissions
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Certifications -->
    <section class="py-12 bg-white border-t border-slate-100">
      <div class="container-custom">
        <div class="flex flex-wrap items-center justify-center gap-8 opacity-60">
          <div class="text-center">
            <div class="font-display font-bold text-lg text-slate-700">DGCA</div>
            <div class="text-sm text-slate-500">Approved</div>
          </div>
          <div class="w-px h-8 bg-slate-300"></div>
          <div class="text-center">
            <div class="font-display font-bold text-lg text-slate-700">ISO 9001</div>
            <div class="text-sm text-slate-500">Certified</div>
          </div>
          <div class="w-px h-8 bg-slate-300"></div>
          <div class="text-center">
            <div class="font-display font-bold text-lg text-slate-700">IATA</div>
            <div class="text-sm text-slate-500">Member</div>
          </div>
          <div class="w-px h-8 bg-slate-300"></div>
          <div class="text-center">
            <div class="font-display font-bold text-lg text-slate-700">AOPA</div>
            <div class="text-sm text-slate-500">Affiliated</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
