---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const features = [
  {
    icon: 'shield',
    title: 'DGCA Approved',
    description: 'Fully certified and approved by the Directorate General of Civil Aviation for all pilot training programs.',
  },
  {
    icon: 'sun',
    title: '300+ Flying Days',
    description: 'Mysore offers exceptional weather with excellent visibility and minimal disruptions year-round.',
  },
  {
    icon: 'users',
    title: 'Expert Instructors',
    description: 'Learn from seasoned pilots with thousands of flight hours and real airline experience.',
  },
  {
    icon: 'plane',
    title: 'Modern Fleet',
    description: 'Train on well-maintained aircraft equipped with the latest glass cockpit avionics.',
  },
];

const stats = [
  { value: '300+', label: 'Flying Days/Year', suffix: '' },
  { value: '17', label: 'Aircraft Fleet', suffix: '+' },
  { value: '50', label: 'Years Experience', suffix: '+' },
  { value: '100', label: 'Safety Record', suffix: '%' },
];

const programs = [
  {
    id: 'ppl',
    abbr: 'PPL',
    title: 'Private Pilot License',
    tagline: 'Your first wings',
    duration: '4-6 months',
    description: 'Learn to fly single-engine aircraft for personal use. The foundation of every aviation career.',
    gradient: 'from-primary-500 to-primary-600',
    bgGradient: 'from-primary-50 to-orange-50',
  },
  {
    id: 'cpl',
    abbr: 'CPL',
    title: 'Commercial Pilot License',
    tagline: 'Fly professionally',
    duration: '12-18 months',
    description: 'The complete pathway to becoming a professional pilot. Fly for airlines and charter companies.',
    gradient: 'from-secondary-500 to-secondary-600',
    bgGradient: 'from-secondary-50 to-purple-50',
    featured: true,
  },
  {
    id: 'fir',
    abbr: 'FIR',
    title: 'Flight Instructor Rating',
    tagline: 'Teach others to fly',
    duration: '2-3 months',
    description: 'Share your passion. Become a certified instructor and train the next generation of pilots.',
    gradient: 'from-slate-700 to-slate-800',
    bgGradient: 'from-slate-50 to-gray-50',
  },
];

const icons = {
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>`,
  sun: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"/>`,
  users: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>`,
  plane: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"/>`,
};
---

<Layout title="Birdkanfly Aviation | Premier Flight Training Academy in Mysore">
  <Header />
  
  <main>
    <!-- ============================================
         HERO SECTION - Cinematic & Immersive
         ============================================ -->
    <section class="relative min-h-[100svh] flex items-center overflow-hidden">
      <!-- Background Layers -->
      <div class="absolute inset-0 bg-slate-950">
        <!-- Video/Image Background -->
        <div class="absolute inset-0">
          <img 
            src="https://images.unsplash.com/photo-1540962351504-03099e0a754b?w=1920&q=80" 
            alt="" 
            class="w-full h-full object-cover opacity-40"
            loading="eager"
          />
          <div class="absolute inset-0 bg-gradient-to-b from-slate-950/50 via-slate-950/30 to-slate-950"></div>
          <div class="absolute inset-0 bg-gradient-to-r from-slate-950/80 via-transparent to-slate-950/40"></div>
        </div>
        
        <!-- Animated Gradient Orbs -->
        <div class="absolute top-1/4 -left-32 w-[500px] h-[500px] bg-primary-500/20 rounded-full blur-[120px] animate-float-slow"></div>
        <div class="absolute bottom-1/4 -right-32 w-[600px] h-[600px] bg-secondary-500/15 rounded-full blur-[120px] animate-float" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-primary-500/5 rounded-full blur-[100px] animate-pulse-glow"></div>
        
        <!-- Grid Pattern Overlay -->
        <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(255,255,255,.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 container-custom pt-32 pb-20">
        <div class="max-w-4xl">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-md border border-white/10 mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
            </span>
            <span class="text-sm font-medium text-white/90">Now Enrolling â€” 2025 Batch</span>
          </div>
          
          <!-- Heading -->
          <h1 class="text-white mb-6 animate-fade-in-up" style="animation-delay: 0.3s;">
            <span class="block text-slate-400 text-lg md:text-xl font-medium mb-3 tracking-wide uppercase">Premier Flight Training Academy</span>
            Your Journey to the<br/>
            <span class="text-gradient-light">Skies Begins Here</span>
          </h1>
          
          <!-- Description -->
          <p class="text-lg md:text-xl text-slate-300 max-w-2xl mb-10 leading-relaxed animate-fade-in-up" style="animation-delay: 0.4s;">
            Transform your dream of flying into reality at Mysore's premier flight training academy. World-class instruction, modern aircraft, and ideal flying conditions.
          </p>
          
          <!-- CTAs -->
          <div class="flex flex-wrap items-center gap-4 animate-fade-in-up" style="animation-delay: 0.5s;">
            <a href="/programs" class="btn-primary text-base px-8 py-4">
              Explore Programs
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/contact" class="btn-white text-base px-8 py-4">
              Contact Us
            </a>
          </div>
          
          <!-- Trust Indicators -->
          <div class="flex flex-wrap items-center gap-8 mt-16 pt-8 border-t border-white/10 animate-fade-in-up" style="animation-delay: 0.6s;">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-white/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-white font-semibold">DGCA Approved</div>
                <div class="text-sm text-slate-400">Government Certified</div>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-white/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
                </svg>
              </div>
              <div>
                <div class="text-white font-semibold">100% Safety</div>
                <div class="text-sm text-slate-400">Perfect Track Record</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-fade-in" style="animation-delay: 1s;">
        <span class="text-xs text-slate-500 uppercase tracking-widest">Scroll</span>
        <div class="w-6 h-10 rounded-full border-2 border-slate-500/30 flex items-start justify-center p-1">
          <div class="w-1.5 h-3 bg-slate-400 rounded-full animate-bounce"></div>
        </div>
      </div>
    </section>

    <!-- ============================================
         FEATURES SECTION
         ============================================ -->
    <section class="section bg-white relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute top-0 right-0 w-1/2 h-full gradient-mesh opacity-50"></div>
      
      <div class="container-custom relative">
        <!-- Section Header -->
        <div class="max-w-2xl mb-16" data-animate>
          <span class="tag tag-primary mb-4">Why Choose Us</span>
          <h2 class="mb-4">
            Everything You Need to <span class="text-gradient">Become a Pilot</span>
          </h2>
          <p class="lead">
            We've created the perfect environment for aspiring pilots to learn, grow, and excel in their aviation careers.
          </p>
        </div>
        
        <!-- Features Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {features.map((feature, i) => (
            <div 
              class="group p-6 rounded-2xl bg-slate-50 hover:bg-white hover:shadow-xl border border-transparent hover:border-slate-100 transition-all duration-500"
              data-animate
              data-delay={String((i + 1) * 100)}
            >
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center text-white mb-5 group-hover:scale-110 transition-transform duration-500">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={icons[feature.icon as keyof typeof icons]} />
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2 group-hover:text-primary-500 transition-colors">{feature.title}</h3>
              <p class="text-slate-600 text-sm leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ============================================
         STATS SECTION
         ============================================ -->
    <section class="py-20 bg-slate-950 relative overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-[100px]"></div>
        <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-secondary-500/10 rounded-full blur-[100px]"></div>
      </div>
      
      <div class="container-custom relative">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
          {stats.map((stat, i) => (
            <div class="text-center" data-animate data-delay={String(i * 100)}>
              <div class="font-display text-5xl md:text-6xl font-bold text-white mb-2">
                {stat.value}<span class="text-primary-500">{stat.suffix}</span>
              </div>
              <div class="text-slate-400 font-medium">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ============================================
         PROGRAMS SECTION
         ============================================ -->
    <section class="section bg-slate-50 relative overflow-hidden">
      <div class="absolute inset-0 pattern-grid"></div>
      
      <div class="container-custom relative">
        <!-- Section Header -->
        <div class="text-center max-w-2xl mx-auto mb-16" data-animate>
          <span class="tag tag-secondary mb-4">Training Programs</span>
          <h2 class="mb-4">
            Choose Your <span class="text-gradient">Flight Path</span>
          </h2>
          <p class="lead">
            Comprehensive training programs designed by industry experts to take you from ground to sky.
          </p>
        </div>
        
        <!-- Programs Grid -->
        <div class="grid lg:grid-cols-3 gap-8">
          {programs.map((program, i) => (
            <div 
              class:list={[
                "card group relative",
                program.featured && "lg:-mt-4 lg:mb-4"
              ]}
              data-animate
              data-delay={String((i + 1) * 150)}
            >
              {program.featured && (
                <div class="absolute -top-3 left-1/2 -translate-x-1/2 z-10">
                  <span class="px-4 py-1 rounded-full bg-gradient-to-r from-secondary-500 to-secondary-600 text-white text-xs font-semibold shadow-lg">
                    Most Popular
                  </span>
                </div>
              )}
              
              <!-- Card Top Gradient -->
              <div class={`h-2 bg-gradient-to-r ${program.gradient}`}></div>
              
              <div class="p-8">
                <!-- Header -->
                <div class="flex items-start justify-between mb-6">
                  <div>
                    <span class={`inline-block px-3 py-1 rounded-lg bg-gradient-to-r ${program.gradient} text-white text-sm font-bold mb-3`}>
                      {program.abbr}
                    </span>
                    <h3 class="text-xl font-bold group-hover:text-primary-500 transition-colors">
                      {program.title}
                    </h3>
                    <p class="text-slate-500 text-sm">{program.tagline}</p>
                  </div>
                </div>
                
                <!-- Description -->
                <p class="text-slate-600 mb-6 leading-relaxed">{program.description}</p>
                
                <!-- Meta -->
                <div class="flex items-center gap-4 mb-6 pb-6 border-b border-slate-100">
                  <div class="flex items-center gap-2 text-sm text-slate-500">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    {program.duration}
                  </div>
                </div>
                
                <!-- CTA -->
                <a 
                  href={`/programs#${program.id}`} 
                  class="inline-flex items-center gap-2 font-semibold text-slate-900 group-hover:text-primary-500 transition-colors"
                >
                  Learn More
                  <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
        
        <!-- View All CTA -->
        <div class="text-center mt-12" data-animate>
          <a href="/programs" class="btn-outline">
            View All Programs
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- ============================================
         CTA SECTION
         ============================================ -->
    <section class="section bg-slate-950 relative overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute inset-0">
        <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary-500/10 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-secondary-500/10 rounded-full blur-[120px] translate-y-1/2 -translate-x-1/2"></div>
      </div>
      
      <!-- Grid pattern -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(255,255,255,.5) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.5) 1px, transparent 1px); background-size: 60px 60px;"></div>
      
      <div class="container-custom relative">
        <div class="max-w-3xl mx-auto text-center" data-animate>
          <span class="tag mb-6 bg-white/10 text-white border-white/10">Ready to Begin?</span>
          <h2 class="text-white mb-6">
            Take the First Step Towards<br/>
            <span class="text-gradient-light">Your Aviation Career</span>
          </h2>
          <p class="text-slate-400 text-lg mb-10 max-w-xl mx-auto">
            Join our next batch and begin your journey to becoming a professional pilot. Limited seats available.
          </p>
          <div class="flex flex-wrap items-center justify-center gap-4">
            <a href="/contact" class="btn-primary text-base px-8 py-4">
              Apply Now
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/admissions" class="btn text-base px-8 py-4 text-white border-2 border-white/20 rounded-full hover:bg-white/10 transition-all">
              View Admissions
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================
         CERTIFICATIONS BAR
         ============================================ -->
    <section class="py-12 bg-white border-t border-slate-100">
      <div class="container-custom">
        <div class="flex flex-wrap items-center justify-center gap-x-12 gap-y-6">
          {['DGCA Approved', 'ISO 9001 Certified', 'IATA Member', 'AOPA Affiliated'].map((cert, i) => (
            <div class="flex items-center gap-3 text-slate-400" data-animate data-delay={String(i * 100)}>
              <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="font-medium">{cert}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
