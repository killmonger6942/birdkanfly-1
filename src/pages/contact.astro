---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const programs = [
  'Private Pilot License (PPL)',
  'Commercial Pilot License (CPL)',
  'Flight Instructor Rating (FIR)',
  'Type Ratings',
  'Campus Tour',
  'General Enquiry',
];
---

<Layout title="Contact Us | Birdkanfly Aviation">
  <Header />
  
  <main>
    <!-- Hero -->
    <section class="pt-32 pb-20 bg-gradient-to-br from-slate-900 to-secondary-900 text-white">
      <div class="container-custom">
        <div class="max-w-3xl animate-fade-in">
          <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            Get in <span class="gradient-text">Touch</span>
          </h1>
          <p class="text-xl text-slate-300">
            Have questions about our programs? Ready to start your pilot journey? We're here to help.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16">
          <!-- Contact Form -->
          <div class="animate-on-scroll">
            <h2 class="font-display text-2xl md:text-3xl font-bold mb-6">Send Us a Message</h2>
            
            <form 
              action="https://formsubmit.co/info@birdkanfly.com" 
              method="POST"
              class="space-y-6"
            >
              <!-- Honeypot -->
              <input type="text" name="_honey" style="display:none">
              <!-- Disable Captcha -->
              <input type="hidden" name="_captcha" value="false">
              <!-- Success page -->
              <input type="hidden" name="_next" value="https://birdkanfly.com/contact?success=true">
              
              <div class="grid sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                    Full Name <span class="text-red-500">*</span>
                  </label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all"
                    placeholder="Your full name"
                  />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-medium text-slate-700 mb-2">
                    Phone Number <span class="text-red-500">*</span>
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    required
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all"
                    placeholder="+91 98765 43210"
                  />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                  Email Address <span class="text-red-500">*</span>
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all"
                  placeholder="your@email.com"
                />
              </div>
              
              <div>
                <label for="interest" class="block text-sm font-medium text-slate-700 mb-2">
                  I'm Interested In
                </label>
                <select 
                  id="interest" 
                  name="interest"
                  class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all bg-white"
                >
                  <option value="">Select a program</option>
                  {programs.map(program => (
                    <option value={program}>{program}</option>
                  ))}
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
                  Your Message <span class="text-red-500">*</span>
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5" 
                  required
                  class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all resize-none"
                  placeholder="Tell us about yourself and what you'd like to know..."
                ></textarea>
              </div>
              
              <button 
                type="submit"
                class="btn-primary w-full sm:w-auto"
              >
                Send Message
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </button>
            </form>

            <!-- Success Message (shown via URL param) -->
            <div id="success-message" class="hidden mt-6 p-4 rounded-xl bg-green-50 border border-green-200">
              <div class="flex items-center text-green-800">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="font-medium">Thank you! We'll get back to you within 24 hours.</span>
              </div>
            </div>
          </div>
          
          <!-- Contact Info -->
          <div class="space-y-8 animate-on-scroll" style="animation-delay: 0.2s;">
            <div>
              <h2 class="font-display text-2xl md:text-3xl font-bold mb-6">Contact Information</h2>
              <p class="text-slate-600 mb-8">
                Visit us at our campus, or reach out through any of the channels below. Our team is available Monday to Saturday.
              </p>
            </div>
            
            <!-- Info Cards -->
            <div class="space-y-4">
              <div class="card p-6 flex items-start space-x-4">
                <div class="w-12 h-12 rounded-xl bg-primary-100 text-primary-500 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold text-lg mb-1">Visit Us</h3>
                  <p class="text-slate-600">
                    Birdkanfly Aviation Academy<br/>
                    Mysore Airport<br/>
                    Mysore, Karnataka 570001
                  </p>
                </div>
              </div>
              
              <div class="card p-6 flex items-start space-x-4">
                <div class="w-12 h-12 rounded-xl bg-secondary-100 text-secondary-500 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold text-lg mb-1">Call Us</h3>
                  <p class="text-slate-600">
                    <a href="tel:+919876543210" class="hover:text-primary-500 transition-colors">+91 98765 43210</a><br/>
                    <a href="tel:+918212345678" class="hover:text-primary-500 transition-colors">+91 821 234 5678</a>
                  </p>
                  <p class="text-slate-400 text-sm mt-1">Mon - Sat: 9:00 AM - 6:00 PM</p>
                </div>
              </div>
              
              <div class="card p-6 flex items-start space-x-4">
                <div class="w-12 h-12 rounded-xl bg-green-100 text-green-500 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold text-lg mb-1">Email Us</h3>
                  <p class="text-slate-600">
                    <a href="mailto:info@birdkanfly.com" class="hover:text-primary-500 transition-colors">info@birdkanfly.com</a><br/>
                    <a href="mailto:admissions@birdkanfly.com" class="hover:text-primary-500 transition-colors">admissions@birdkanfly.com</a>
                  </p>
                </div>
              </div>
              
              <div class="card p-6 flex items-start space-x-4">
                <div class="w-12 h-12 rounded-xl bg-blue-100 text-blue-500 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
