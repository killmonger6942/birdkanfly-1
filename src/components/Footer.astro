<footer class="bg-slate-950 text-white relative overflow-hidden">
  <!-- Decorative gradient -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-4xl h-px bg-gradient-to-r from-transparent via-slate-700 to-transparent"></div>
  
  <!-- Main Footer -->
  <div class="container-custom pt-20 pb-12">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-12 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-3 lg:col-span-4">
        <a href="/" class="inline-flex items-center gap-3 mb-6">
          <div class="w-11 h-11 bg-gradient-to-br from-primary-500 to-secondary-600 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/>
            </svg>
          </div>
          <span class="font-display font-bold text-xl">
            <span class="text-primary-400">Bird</span><span class="text-white">kan</span><span class="text-secondary-400">fly</span>
          </span>
        </a>
        <p class="text-slate-400 text-sm leading-relaxed mb-6 max-w-sm">
          Premier flight training academy in Mysore. Transform your dream of flying into reality with world-class instruction.
        </p>
        
        <!-- Social Links -->
        <div class="flex items-center gap-3">
          {socials.map(social => (
            <a 
              href={social.href}
              class="w-10 h-10 rounded-xl bg-slate-900 hover:bg-slate-800 flex items-center justify-center text-slate-400 hover:text-white transition-all duration-300"
              aria-label={social.name}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon}/>
              </svg>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Navigation Columns -->
      <div class="lg:col-span-2">
        <h4 class="font-display font-semibold text-sm uppercase tracking-wider text-slate-500 mb-4">Company</h4>
        <ul class="space-y-3">
          {navigation.company.map(item => (
            <li>
              <a href={item.href} class="text-slate-400 hover:text-white transition-colors text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="lg:col-span-2">
        <h4 class="font-display font-semibold text-sm uppercase tracking-wider text-slate-500 mb-4">Programs</h4>
        <ul class="space-y-3">
          {navigation.programs.map(item => (
            <li>
              <a href={item.href} class="text-slate-400 hover:text-white transition-colors text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="lg:col-span-2">
        <h4 class="font-display font-semibold text-sm uppercase tracking-wider text-slate-500 mb-4">Resources</h4>
        <ul class="space-y-3">
          {navigation.resources.map(item => (
            <li>
              <a href={item.href} class="text-slate-400 hover:text-white transition-colors text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Column -->
      <div class="col-span-2 lg:col-span-2">
        <h4 class="font-display font-semibold text-sm uppercase tracking-wider text-slate-500 mb-4">Contact</h4>
